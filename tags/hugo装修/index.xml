    }

    
    if (!iframe.src || iframe.src === window.location.href) {
        
        const finalSrc = realSrc.startsWith(&#39;//&#39;) ? &#39;https:&#39; &#43; realSrc : realSrc;
        console.log(&#39;Loading Iframe:&#39;, finalSrc);
        iframe.src = finalSrc;
    }

    
    box.classList.add(&#39;is-active&#39;);
  }, { once: true }); 
})();
&lt;/script&gt;
